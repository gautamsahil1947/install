#!/bin/bash

programs=(
    # basic programs
    "git"
    "neofetch"

    # xorg-programs
    "xorg-server"
    "xorg-xinit"
    "xorg-xset"
    "xorg-setxkbmap"
    "xorg-xrandr"
    "xcompmgr"
    "xwallpaper"
    "xclip"
    "xsel"
    "light"

    # user programs
    "tmux"
    "flameshot"
    "brave-bin"
    "firefox"
    "neovim"
    "npm"
    "clang"
    "pavucontrol"
    "sxiv"
    "mpv"
    "delta-git"
    "zsh"
    "zsh-syntax-highlighting-git"
    "newsboat"
    "yt-dlp"
    "python-pip"
    "arc-gtk-theme"

    "gimp"
    "blender"
)

if command -v "yay"
then
    yay -Sy --noconfirm
else
    sudo pacman -Sy --noconfirm
fi

for package in "${programs[@]}"
do
    yay -S $package --noconfirm
    # errorReporting "yay" "$package"
    # yay returns 0 if it is not able to find the program
done
